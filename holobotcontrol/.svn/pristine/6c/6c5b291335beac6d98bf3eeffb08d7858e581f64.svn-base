body{
	font-family:Helvetica;
}

h1{ 
	padding-top: 0.5em;
	color:black; 
	text-align:center;
	
}

table{
	margin:auto;
	padding-top: 1.5em;
	padding-bottom: 1.5em;
	width: 12em;
	height: 12em;
}

#content{
	width: 60em;
	margin: 0 auto;
	padding: 0;
	background-color: #F0F0F9;
}

#control img{
	width:4em;
	height:4.5em;
}

#video {
	height: 480px;
	width: 640px;
	background-color: #000000;
	margin: 0 auto;
}

#footer {
	padding-top: 0.2em;
	text-align: center;
	font-size: 10px;
}

#status {
	border-left:  1px solid;
	border-right:  1px solid;
	border-bottom:  1px solid;
	width: 25em;
	height: 1em;
	margin: 0 auto;
	background-color: #CED8F6;
}

#status a{
	margin-left: auto;
	    margin-right: auto;
}